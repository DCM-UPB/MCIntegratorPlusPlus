#ifndef MCI_SAMPLING_FUNCTION_INTERFACE
#define MCI_SAMPLING_FUNCTION_INTERFACE

 
class MCISamplingFunctionInterface
{
   protected:
      int _ndim; //dimension of the input array (walker position)
      int _nproto; //number of proto sampling functions given as output

   public:
      MCISamplingFunctionInterface(const int &ndim, const int &nproto){_ndim=ndim; _nproto=nproto;}

      // Function that MCI uses for the proto-sampling function
      virtual void protoSamplingFunction(const double *, double *) = 0;
      //                                 ^walker position ^output
      
      // Acceptance function, given the new and old values of the proto sampling function
      virtual void acceptanceFunction(const double *, const double *, double &) = 0;
      //                              ^old values     ^new values     ^output = acceptance
};


#endif
